@using GraduationProjectBMS.Models;
@model Article
@{
    ViewData["Title"] = "Edit Article";
}

<h1>@ViewData["Title"]</h1>


<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-groub">
            <label for="title" class="form-label">Article Title</label>
            <input id="title" class="form-control" name="ArticleTitle" type="text" value="@Model.ArticleTitle"/>
        </div>

        <div class="form-groub">
            <label for="ArticleThumbnail" class="form-label">Article Thumbnail</label>
            <input id="ArticleThumbnail" class="form-control" name="ArticleThumbnail" type="file" value="@Model.ArticleThumbnail" />
        </div>

        <div class="form-groub">
            <label for="Description" class="form-label">Article Description</label>
            <input id="Description" class="form-control" name="ArticleDescription" type="text" value="@Model.ArticleDescription" />
        </div>

        <div class="form-groub">
            <label for="content" class="form-label">Article Content</label>
            <input id="content" class="form-control" name="ArticleContent" type="text" value="@Model.ArticleContent" />
        </div>
        <br />
        <button class="btn btn-primary" type="submit">Submit</button>
        <a href="/Article/Index" class="btn btn-dark">Back to list</a>
        <a href="/Article/Delete/@Model.ArticleId" class="btn btn-danger">Delete</a>
    </form>
</div>
