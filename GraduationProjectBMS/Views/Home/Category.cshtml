@model CategoryViewModel

<h1>@Model.CategoryName Category</h1>

<ul>
    @foreach (var article in Model.Articles)
    {
        <div class="card mb-2" style="display:flex;justify-content:space-between;flex-direction:row; align-items:center;">
            <img src="~/ArticlesThumbnails/@article.ArticleThumbnail" width="20%">
            <div style="padding-right:20px;">
                <a href="/Article/Details/@article.ArticleId"><h4 class="display-5">@article.ArticleTitle</h4></a>
            </div>
        </div>
    }
</ul>
